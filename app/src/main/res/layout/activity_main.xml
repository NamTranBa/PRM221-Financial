<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">
    <!-- App Logo or Image -->

    <!-- Welcome Message -->

    <!-- App Description -->

    <!-- Get Started Button -->


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="295dp"
        android:layout_height="283dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="62dp"
        android:contentDescription="App Logo"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Welcome to System"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="106dp"
        android:layout_below="@id/textViewWelcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="21dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Take control of your finances, track expenses, set budgets, and achieve your financial goals."
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/imageViewLogo"
        android:layout_alignStart="@+id/imageViewLogo"
        android:layout_alignEnd="@+id/imageViewLogo"
        android:layout_marginStart="52dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="43dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_border"
        android:gravity="center"
        android:text="Get Started"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>
